{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "./scripts/**/*",
    "./src/**/*",
    "./tests/**/*",
    "./*.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ESNext", "Decorators", "DOM"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["src/*"],
      "@tai-kun/surreal/cbor": ["src/cbor/index.ts"],
      "@tai-kun/surreal/data-types/decode-only": [
        "src/data-types/decode-only/index.ts"
      ],
      "@tai-kun/surreal/data-types/encodable": [
        "src/data-types/encodable/index.ts"
      ],
      "@tai-kun/surreal/data-types/standard": [
        "src/data-types/standard/index.ts"
      ],
      "@tai-kun/surreal/utils": ["src/utils/index.ts"],
      "@tai-kun/surreal/errors": ["src/errors/index.ts"]
    }
  }
}
