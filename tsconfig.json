{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "./scripts/**/*",
    "./src/**/*",
    "./tests/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ESNext", "Decorators", "DOM"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./src/*"],
      "surreal-js": ["./src/index.ts"],
      "surreal-js/standard": ["./src/models/standard/index.ts"],
      "surreal-js/tiny": ["./src/models/tiny/index.ts"],
      "surreal-js/full": ["./src/models/full/index.ts"],
      "surreal-js/engines": ["./src/engines/index.ts"],
      "surreal-js/formatters": ["./src/formatters/index.ts"],
      "surreal-js/validators": ["./src/validators/index.ts"],
      "surreal-js/errors": ["./src/errors.ts"],
      "surreal-js/_internal": ["./src/_internal/index.ts"]
    }
  }
}
