{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "./scripts/**/*",
    "./src/**/*",
    "./tests/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ESNext", "Decorators", "DOM"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./src/*"],
      "@tai-kun/surreal": ["./src/index.ts"],
      "@tai-kun/surreal/clients/standard": ["./src/clients/standard.ts"],
      "@tai-kun/surreal/clients/tiny": ["./src/clients/tiny.ts"],
      "@tai-kun/surreal/clients/full": ["./src/clients/full.ts"],
      "@tai-kun/surreal/values/standard": ["./src/values/standard/index.ts"],
      "@tai-kun/surreal/values/tiny": ["./src/values/tiny/index.ts"],
      "@tai-kun/surreal/values/full": ["./src/values/full/index.ts"],
      "@tai-kun/surreal/engines": ["./src/engines/index.ts"],
      "@tai-kun/surreal/formatters": ["./src/formatters/index.ts"],
      "@tai-kun/surreal/validators": ["./src/validators/index.ts"],
      "@tai-kun/surreal/errors": ["./src/errors.ts"],
      "@tai-kun/surreal/_lib": ["./src/_lib/index.ts"]
    }
  }
}
