{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "./scripts/**/*",
    "./src/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ESNext", "Decorators", "DOM"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
