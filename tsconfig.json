{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "./scripts/**/*",
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "./tests/**/*.js",
    "./tests/**/*.mjs"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ESNext", "Decorators"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@tai-kun/surrealdb": ["./src/client/normal.ts"],
      "@tai-kun/surrealdb/full": ["./src/client/full.ts"],
      "@tai-kun/surrealdb/tiny": ["./src/client/tiny.ts"],
      "@tai-kun/surrealdb/internal": ["./src/internal/index.ts"]
    }
  }
}
