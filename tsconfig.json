{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "./scripts/**/*",
    "./src/**/*",
    "./tests/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ESNext", "Decorators"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@tai-kun/surrealdb": ["./src/index.ts"],
      "@tai-kun/surrealdb/clients": ["./src/clients/index.ts"],
      "@tai-kun/surrealdb/engines": ["./src/engines/index.ts"],
      "@tai-kun/surrealdb/formatters": ["./src/formatters/index.ts"],
      "@tai-kun/surrealdb/validators": ["./src/validators/index.ts"],
      "@tai-kun/surrealdb/errors": ["./src/errors/index.ts"]
    }
  }
}
